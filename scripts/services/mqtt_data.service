[Unit]
Description=Servicio MQTT a MySQL Python
After=network.target

[Service]
Type=simple
User=hector_tovar
WorkingDirectory=/home/hector_tovar/Ventologix/scripts
ExecStart=/home/hector_tovar/Ventologix/vento/bin/python /home/hector_tovar/Ventologix/scripts/mqtt_to_mysql.py
